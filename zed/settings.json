{
  "auto_install_extensions": {
    "catppuccin": true,
    "catppuccin-icons": true,
    "dockerfile": true,
    "docker-compose": true,
    "sql": true,
    "html": true,
    "elixir": true,
    "erlang": true,
    "cspell": true,
    "git-firefly": true
  },
  "theme": { "mode": "system", "light": "Catppuccin Latte", "dark": "Catppuccin Mocha" },
  "icon_theme": { "mode": "system", "light": "Catppuccin Latte", "dark": "Catppuccin Mocha" },
  "base_keymap": "VSCode",
  "buffer_font_size": 18,
  "buffer_font_family": "FiraCode Nerd Font",
  "ui_font_size": 18,
  "ui_font_family": "FiraCode Nerd Font",
  "active_pane_modifiers": { "inactive_opacity": 0.75 },
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "close_position": "left",
    "show_diagnostics": "all"
  },
  "toolbar": {
    "breadcrumbs": true,
    "agent_review": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "collaboration_panel": { "button": false },
  "seed_search_query_from_cursor": "selection",
  "tab_size": 2,
  "soft_wrap": "bounded",
  "preferred_line_length": 100,
  "terminal": {
    "dock": "right",
    "blinking": "on",
    "max_scroll_history_lines": 100000,
    "toolbar": { "breadcrumbs": false },
    "env": {}
  },
  "title_bar": {
    "show": "never",
    "show_branch_icon": true,
    "show_user_picture": true,
    "show_onboarding_banner": false
  },
  "outline_panel": { "button": false, "dock": "left" },
  "notification_panel": { "button": false },
  "calls": { "mute_on_join": true, "share_on_join": false },
  "telemetry": { "diagnostics": false, "metrics": false },
  "languages": {
    "Elixir": {
      "formatter": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      }
    },
    "Erlang": { "language_servers": ["elp"] }
  },
  "features": { "edit_prediction_provider": "zed" },
  "edit_predictions": { "mode": "subtle", "disabled_globs": ["**/secret*"] },
  "agent": {
    "always_allow_tool_actions": true,
    "enabled": true,
    "button": true,
    "inline_assistant_model": { "provider": "zed.dev", "model": "claude-sonnet-4-5" },
    "default_profile": "write",
    "default_model": { "provider": "zed.dev", "model": "claude-sonnet-4-5" },
    "profiles": {
      "ask": {
        "name": "Ask",
        "tools": {
          "contents": true,
          "diagnostics": true,
          "fetch": true,
          "list_directory": true,
          "project_notifications": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "open": true,
          "grep": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": false,
        "context_servers": {
          "docker-mcp-gateway": {
            "tools": {
              "search_documentation": true,
              "resolve-library-id": true,
              "list_users": true,
              "list_teams": true,
              "list_projects": true,
              "list_project_labels": true,
              "list_issues": true,
              "list_issue_statuses": true,
              "list_issue_labels": true,
              "list_documents": true,
              "list_cycles": true,
              "list_comments": true,
              "get_user": true,
              "get_team": true,
              "get_project": true,
              "get_issue_status": true,
              "get_issue": true,
              "get_document": true,
              "get-library-docs": true
            }
          }
        }
      }
    }
  },
  "agent_servers": {
    "OpenCode": {
      "command": "opencode",
      "args": ["acp"],
      "env": {}
    }
  },
  "context_servers": {
    "docker-mcp-gateway": {
      "source": "custom",
      "enabled": true,
      "command": "docker",
      "args": ["mcp", "gateway", "run"],
      "env": {}
    }
  }
}
