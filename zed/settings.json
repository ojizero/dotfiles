{
  "auto_install_extensions": {
    // Make it look good-er
    "catppuccin": true,
    "catppuccin-icons": true,

    // Docker &-compose syntax
    "dockerfile": true,
    "docker-compose": true,

    // Extending language support
    "sql": true,
    "html": true,
    "elixir": true,
    "erlang": true,

    // Spell checker
    "cspell": true,

    // Git syntax
    "git-firefly": true
  },

  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "icon_theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "base_keymap": "VSCode",
  "buffer_font_size": 18,
  "buffer_font_family": "FiraCode Nerd Font",
  "ui_font_size": 18,
  "ui_font_family": "FiraCode Nerd Font",
  "active_pane_modifiers": { "inactive_opacity": 0.75 },
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "close_position": "left",
    "show_diagnostics": "all"
  },
  "toolbar": {
    "breadcrumbs": true,
    "agent_review": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "collaboration_panel": { "button": false },
  "seed_search_query_from_cursor": "selection",
  "tab_size": 2,
  "soft_wrap": "bounded",
  "preferred_line_length": 100,

  "terminal": {
    "dock": "right",
    "blinking": "on",
    "max_scroll_history_lines": 100000,
    "toolbar": { "breadcrumbs": false },
    "env": {
      // // When in Zed's terminal, tell terminal tools to use Zed for the editor
      // "EDITOR": "zed"
    }
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_onboarding_banner": false,
    "show_user_picture": true
  },
  "outline_panel": {
    "button": false,
    "dock": "left"
  },
  "notification_panel": { "button": false },

  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "languages": {
    "Elixir": {
      // Using Mix in place of the LSP as the ElixirLS LSP seems to sometimes
      // break with some plugins arbitrarily. While a tiny bit slower
      // this is more stable/consistent in behaviour.
      "formatter": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      }
    },
    "Erlang": {
      "language_servers": ["elp"]
    }
  },

  "features": { "edit_prediction_provider": "zed" },
  // Append extra patterns to disable predictions in
  "edit_predictions": {
    "mode": "subtle",
    "disabled_globs": ["**/secret*"]
  },
  "agent": {
    "always_allow_tool_actions": true,
    "enabled": true,
    "button": true,
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "default_profile": "write",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "context_servers": {
    "docker-mcp-gateway": {
      "source": "custom",
      "enabled": true,
      "command": "docker",
      "args": ["mcp", "gateway", "run"],
      "env": {}
    }
  }
}
